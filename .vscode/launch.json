{
    "version": "2.0.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/BoardGame.Api/bin/Debug/net8.0/BoardGame.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "C#: boardGame1.1",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/BoardGame.Api/BoardGame.Api.csproj",
            "launchConfigurationId": "TargetFramework=8.0;boardGame1.1"
        }
    ]
}